.single-row {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.double-row {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.three-row {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.page-css {
  width 100%;
  height 100%;
  background-color white;

  .sub-content {
    position absolute;
    left 0;
    right 0;
    top 0;
    bottom 0;
    z-index 100;
  }

  .from-item-tip {
    width 100%;
    line-height 1;
    font-size 12px;
    height 17px;
    padding-top 5px;
    color #8f8f8f;
  }
}

input:-webkit-autofill {
  background-color: #FAFFBD;
  background-image: none;
}